<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CryptoWidget.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="https://codewf.com"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="200"
        x:Class="CryptoWidget.KLineWindow"
        x:DataType="vm:KLineViewModel"
        Icon="/Assets/cryptowidget-logo.ico"
        Title="{c:I18n 'KLineWindowTitle'}"
        Width="350" Height="200"
        MinWidth="350" MaxWidth="350"
        MinHeight="200"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        Topmost="{Binding Settings.KeepOnTop}"
        ShowInTaskbar="False"
        Opacity="{Binding Settings.OpacityLevel}"
        BorderBrush="Transparent"
        BorderThickness="0"
        DragDrop.AllowDrop="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        ExtendClientAreaToDecorationsHint="False"
        SystemDecorations="None"
        >
  
    <Border Margin="10">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0"
                   VerticalAlignment="Center"
                   Text="{c:I18n 'KLineTitle'}" Foreground="White" FontSize="18" FontWeight="Bold"/>

        <!-- 關閉按鈕 -->
        <Button Grid.Row="0"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Width="24" Height="24"
          Padding="0"
          Background="Transparent" BorderThickness="0"
          FontFamily="Segoe MDL2 Assets"
          FontSize="16"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Content="&#xE10A;"
          Click="CloseButton_Click"/>

        <!-- 輸入區域 -->
        <Grid Grid.Row="1" Margin="0,10,0,10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="60"/>
          </Grid.ColumnDefinitions>
          
          <!-- 交易對輸入框 -->
          <TextBox Grid.Column="0"
                   Text="{Binding SymbolInput}"
                   Background="Transparent"
                   Foreground="White"
                   BorderBrush="Gray"
                   BorderThickness="1"
                   Margin="0,0,10,0"
                   FontSize="12"
                   VerticalContentAlignment="Center"
                   HorizontalContentAlignment="Center"
                   Watermark="BTC/USDT">
            <TextBox.Styles>
              <Style Selector="TextBox:focus">
                <Style Selector="^ /template/ Border#PART_BorderElement">
                  <Setter Property="BorderBrush" Value="Gray"/>
                  <Setter Property="BorderThickness" Value="1"/>
                </Style>
              </Style>
            </TextBox.Styles>
          </TextBox>
          
          <!-- 時區下拉選單 -->
          <ComboBox x:Name="TimeframeComboBox"
                    Grid.Column="1"
                    SelectedItem="{Binding SelectedTimeframe}"
                    ItemsSource="{Binding Timeframes}"
                    Background="#404040"
                    Foreground="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="0,0,10,0"
                    FontSize="12"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    IsDropDownOpen="False">
            <ComboBox.Styles>
              <Style Selector="ComboBoxItem">
                <Setter Property="Background" Value="#404040"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="8,4"/>
              </Style>
              <Style Selector="ComboBoxItem:selected">
                <Setter Property="Background" Value="#606060"/>
                <Setter Property="Foreground" Value="White"/>
              </Style>
              <Style Selector="ComboBoxItem:pointerover">
                <Setter Property="Background" Value="#505050"/>
                <Setter Property="Foreground" Value="White"/>
              </Style>
            </ComboBox.Styles>
          </ComboBox>
          
          <!-- 查詢按鈕 -->
          <Button Grid.Column="2"
                  Command="{Binding QueryKLineCommand}"
                  Background="#404040"
                  Foreground="White"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  FontSize="12"
                  Content="{c:I18n 'Query'}"/>
        </Grid>

        <!-- K棒圖表區域 -->
        <Border Grid.Row="2" 
                Background="#202020" 
                CornerRadius="6" 
                Padding="10"
                IsVisible="{Binding HasKLineData}">
          <Canvas Name="KLineCanvas" 
                  Background="Transparent"
                  Width="300" 
                  Height="80"/>
        </Border>
        
        <!-- 狀態文字 -->
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusText}"
                   Foreground="White"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   IsVisible="{Binding ShowStatus}"/>
      </Grid>
    </Border>

</Window>
