<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:CryptoWidget.ViewModels;assembly=CryptoWidget"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="250"
        x:Class="CryptoWidget.AboutWindow"
        x:DataType="svc:SettingViewModel"
        Width="300" Height="250"
        Title="關於"
        Topmost="{Binding KeepOnTop}"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ShowInTaskbar="False"
        Opacity="{Binding OpacityLevel}"
        >

  <Border CornerRadius="10"
          Margin="10" Padding="20">

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <!-- 標題 -->
      <TextBlock Grid.Row="0" 
                 Text="{x:Static svc:AboutViewModel.ProductName}" 
                 Foreground="White" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 HorizontalAlignment="Center"
                 Margin="0,0,0,20"/>

      <!-- 版本資訊 -->
      <StackPanel Grid.Row="1" 
                  Spacing="10" 
                  VerticalAlignment="Center">
        <TextBlock Text="{x:Static svc:AboutViewModel.Version}" 
                   Foreground="White" 
                   FontSize="16" 
                   HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Static svc:AboutViewModel.Description}" 
                   Foreground="Gray" 
                   FontSize="14" 
                   HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Static svc:AboutViewModel.Author}" 
                   Foreground="Gray" 
                   FontSize="12" 
                   HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Static svc:AboutViewModel.Copyright}" 
                   Foreground="Gray" 
                   FontSize="10" 
                   HorizontalAlignment="Center"/>
      </StackPanel>

      <!-- 關閉按鈕 -->
      <Button Grid.Row="2" 
              Content="確定" 
              Width="80" Height="30"
              HorizontalAlignment="Center"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Margin="0,20,0,0"
              Click="CloseButton_Click"/>
    </Grid>
  </Border>
</Window> 