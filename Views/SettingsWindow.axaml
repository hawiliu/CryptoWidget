<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CryptoWidget.ViewModels"
        xmlns:svc="clr-namespace:CryptoWidget.Services;assembly=CryptoWidget"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
        x:Class="CryptoWidget.SettingsWindow"
        x:DataType="svc:SettingsService"
        Width="300" Height="200"
        Title="設定"
        Topmost="True"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ShowInTaskbar="False"
        Opacity="{Binding OpacityLevel}">

  <Border CornerRadius="10"
          Margin="10" Padding="10">

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Button Grid.Row="0"
              HorizontalAlignment="Right"
              Width="24" Height="24"
              Padding="4"
              Background="Transparent" BorderThickness="0"
              FontFamily="Segoe MDL2 Assets"
              FontSize="16"
              Content="&#xE10A;"
              Click="CloseButton_Click"/>

      <StackPanel Grid.Row="1" Spacing="10">
        <TextBlock Text="視窗透明度" Foreground="White" FontSize="14"/>
        <Slider Minimum="0.2" Maximum="1.0"
                Value="{Binding OpacityLevel}"
                TickFrequency="0.1"/>
        <TextBlock Foreground="White"
                   Text="{Binding OpacityLevel, StringFormat='目前 {0:P0}'}"/>
      </StackPanel>
    </Grid>
  </Border>
</Window>
