<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CryptoWidget.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="https://codewf.com"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100"
        x:Class="CryptoWidget.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/cryptowidget-logo.ico"
        Title="{c:I18n 'MainWindowTitle'}"
        Width="300" Height="100"
        MinWidth="300" MaxWidth="300"
        MinHeight="100"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        Topmost="{Binding Settings.KeepOnTop}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ShowInTaskbar="False"
        Opacity="{Binding Settings.OpacityLevel}"
        >
  
    <Border Margin="10">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 版本號按鈕 -->
        <Button Grid.Row="0"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Margin="0,0,48,0"
          Width="24" Height="24"
          Padding="0"
          Background="Transparent" BorderThickness="0"
          FontFamily="Segoe MDL2 Assets"
          FontSize="14"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Content="&#xE946;"
          Command="{Binding OpenAboutCommand}"/>

        <!-- 齒輪按鈕 -->
        <Button Grid.Row="0"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Margin="0,0,24,0"
          Width="24" Height="24"
          Padding="0"
          Background="Transparent" BorderThickness="0"
          FontFamily="Segoe MDL2 Assets"
          FontSize="14"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Content="&#xE115;"
          Command="{Binding OpenSettingsCommand}"/>

        <!-- 關閉按鈕 -->
        <Button Grid.Row="0"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Width="24" Height="24"
          Padding="0"
          Background="Transparent" BorderThickness="0"
          FontFamily="Segoe MDL2 Assets"
          FontSize="16"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Content="&#xE10A;"
          Click="CloseButton_Click"/>

        <!-- 幣價 -->
        <StackPanel Grid.Row="1" Spacing="6">
          <TextBlock Text="{Binding PriceLines}" Foreground="White" FontSize="18"/>
        </StackPanel>
      </Grid>
    </Border>

</Window>
