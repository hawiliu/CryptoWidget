<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CryptoWidget.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="https://codewf.com"
        xmlns:local="clr-namespace:CryptoWidget.Services.Converter;assembly=CryptoWidget"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="200"
        x:Class="CryptoWidget.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/cryptowidget-logo.ico"
        Title="{c:I18n 'MainWindowTitle'}"
        Width="350" Height="200"
        MinWidth="350" MaxWidth="300"
        MinHeight="200"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        Topmost="{Binding Settings.KeepOnTop}"
        ShowInTaskbar="False"
        Opacity="{Binding Settings.OpacityLevel}"
        BorderBrush="Transparent"
        BorderThickness="0"
        DragDrop.AllowDrop="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        ExtendClientAreaToDecorationsHint="False"
        SystemDecorations="None"
        >
  <Window.Resources>
    <local:HistoryToPointsConverter x:Key="HistoryToPointsConverter"/>
    <local:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter"/>
  </Window.Resources>
  
    <Border Margin="10">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 版本號按鈕 -->
        <Button Grid.Row="0"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Margin="0,0,72,0"
          Width="24" Height="24"
          Padding="0"
          Background="Transparent" BorderThickness="0"
          FontFamily="Segoe MDL2 Assets"
          FontSize="14"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Content="&#xE946;"
          Command="{Binding OpenAboutCommand}"/>

        <!-- 齒輪按鈕 -->
        <Button Grid.Row="0"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Margin="0,0,48,0"
          Width="24" Height="24"
          Padding="0"
          Background="Transparent" BorderThickness="0"
          FontFamily="Segoe MDL2 Assets"
          FontSize="14"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Content="&#xE115;"
          Command="{Binding OpenSettingsCommand}"/>

        <!-- 交易所持倉按鈕 -->
        <Button Grid.Row="0"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Margin="0,0,24,0"
          Width="24" Height="24"
          Padding="0"
          Background="Transparent" BorderThickness="0"
          FontFamily="Segoe MDL2 Assets"
          FontSize="14"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Content="&#xEADF;"
          Command="{Binding OpenExchangePositionsCommand}"/>
        
        <!-- 關閉按鈕 -->
        <Button Grid.Row="0"
          HorizontalAlignment="Right"
          VerticalAlignment="Center"
          Width="24" Height="24"
          Padding="0"
          Background="Transparent" BorderThickness="0"
          FontFamily="Segoe MDL2 Assets"
          FontSize="16"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Content="&#xE10A;"
          Click="CloseButton_Click"/>

        <!-- 幣價列表或狀態文字 -->
        <!-- 中間內容區域（可滾動） -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,10,0">
            <StackPanel Spacing="10" Margin="0,0,0,0">
              <!-- 當有資料時顯示 ItemsControl -->
              <ItemsControl ItemsSource="{Binding PriceItems}" 
                            IsVisible="{Binding HasData}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <Grid Margin="0,3">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="{Binding $parent[ItemsControl].DataContext.Settings.ShowTemporaryInput, Converter={StaticResource BoolToGridLengthConverter}, ConverterParameter=80}"/>
                      </Grid.ColumnDefinitions>
                      
                      <!-- 交易對和價格 -->
                      <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Symbol}" Foreground="White" FontSize="{Binding $parent[ItemsControl].DataContext.Settings.SymbolFontSize}" FontWeight="Bold" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Price}" Foreground="LightGray" FontSize="{Binding $parent[ItemsControl].DataContext.Settings.PriceFontSize}"/>
                      </StackPanel>

                      <!-- 右：迷你折線圖（隨容器縮放） -->
                      <Border Grid.Column="1" Background="#202020" CornerRadius="6" Padding="6" Height="30" Margin="5,0,5,0" IsVisible="{Binding $parent[ItemsControl].DataContext.Settings.ShowChart}">
                        <!-- 用 Viewbox 讓內部 100x26 的座標自動等比放大 -->
                        <Viewbox Stretch="Fill">
                          <Grid Width="100" Height="26">
                            <!-- X 軸淡線（可選） -->
                            <Rectangle Height="1" VerticalAlignment="Center" Fill="#404040"/>
                            <!-- 折線 -->
                            <Polyline
                              Points="{Binding History, Converter={StaticResource HistoryToPointsConverter}}"
                              Stroke="#66FFFFFF" StrokeThickness="2" />
                          </Grid>
                        </Viewbox>
                      </Border>
                      
                      <!-- 輸入框 -->
                      <TextBox Grid.Column="2" 
                              Text="{Binding InputValue}" 
                              Background="Transparent"
                              Foreground="White"
                              BorderBrush="Gray"
                              BorderThickness="1"
                              Margin="0,0,10,0"
                              FontSize="12"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Center"
                              IsVisible="{Binding $parent[ItemsControl].DataContext.Settings.ShowTemporaryInput}">
                        <TextBox.Styles>
                          <Style Selector="TextBox:focus">
                            <Style Selector="^ /template/ Border#PART_BorderElement">
                              <Setter Property="BorderBrush" Value="Gray"/>
                              <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                          </Style>
                        </TextBox.Styles>
                      </TextBox>
                    </Grid>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
              
              <!-- 當沒有資料時顯示狀態文字 -->
              <TextBlock Text="{Binding StatusStr}" 
                        Foreground="White" 
                        FontSize="18"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsVisible="{Binding HasData, Converter={x:Static BoolConverters.Not}}"/>
            </StackPanel>
        </ScrollViewer>
      </Grid>
    </Border>

</Window>
